<h1>Galleries</h1>

<ul>
  <% data.galleries.each do |gallery| %>
    <li>
      <a href="/galleries/<%= gallery.slug %>">
        <h5><%= gallery.title %></h5>
        <div style="width: 300px; height: 200px">
          <% path = ("galleries/" + gallery.folder + "/" + gallery.cover_image) %>
          <%= image_tag(path, :style=>"width: 100%; height: 100%") %>
        </div>
      </a>
    </li>
  <% end %>
</ul>
